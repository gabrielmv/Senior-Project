<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/btnCon"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/btnCon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBTSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/btnBTSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="16dp"
        android:text="@string/steps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_stepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="24dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_steps" />

    <TextView
        android:id="@+id/tv_s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Sensor 1: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCon" />

    <TextView
        android:id="@+id/tv_s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sensor 2: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_s1" />

    <TextView
        android:id="@+id/tv_s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sensor 3: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_s2" />

    <TextView
        android:id="@+id/tv_s4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sensor 4: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_s3" />

    <TextView
        android:id="@+id/tv_s1v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_s1"
        app:layout_constraintTop_toBottomOf="@+id/btnCon" />

    <TextView
        android:id="@+id/tv_s2v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_s2"
        app:layout_constraintTop_toBottomOf="@+id/tv_s1v" />

    <TextView
        android:id="@+id/tv_s3v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_s3"
        app:layout_constraintTop_toBottomOf="@+id/tv_s2v" />

    <TextView
        android:id="@+id/tv_s4v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_s4"
        app:layout_constraintTop_toBottomOf="@+id/tv_s3v" />

    <ImageView
        android:id="@+id/im_foot"
        android:layout_width="186dp"
        android:layout_height="323dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foot" />

    <ImageView
        android:id="@+id/im_s1"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/im_foot"
        app:layout_constraintTop_toTopOf="@+id/im_foot"
        app:srcCompat="@drawable/circle_green" />

    <ImageView
        android:id="@+id/im_s2"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="@+id/im_foot"
        app:layout_constraintTop_toTopOf="@+id/im_foot"
        app:srcCompat="@drawable/circle_green" />

    <ImageView
        android:id="@+id/im_s3"
        android:layout_width="33dp"
        android:layout_height="32dp"
        android:layout_marginBottom="110dp"
        android:layout_marginStart="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/im_foot"
        app:layout_constraintStart_toStartOf="@+id/im_foot"
        app:srcCompat="@drawable/circle_green" />

    <ImageView
        android:id="@+id/im_s4"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/im_foot"
        app:layout_constraintStart_toStartOf="@+id/im_foot"
        app:srcCompat="@drawable/circle_green" />

</android.support.constraint.ConstraintLayout>